{
  "name": "nextime-ai-reviewer",
  "version": "1.0.0",
  "description": "Open AI powered code reviews",
  "repository": "https://github.com/nextimecode/ai-codereviewer",
  "packageManager": "pnpm@8.6.10",
  "main": "lib/main.js",
  "author": "Pedro Duarte - NeXTIME",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "package": "ncc build --source-map --license licenses.txt",
    "format": "prettier --write . '!dist/**/*'",
    "lint": "prettier --check . '!dist/**/*'",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm store prune && rm -rf node_modules tsconfig.tsbuildinfo",
    "go": "pnpm run clean && pnpm i && pnpm run build && pnpm run package && pnpm run format && pnpm run lint && pnpm run typecheck"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@octokit/request": "^8.1.1",
    "@octokit/rest": "^20.0.1",
    "minimatch": "^9.0.3",
    "node-fetch": "^3.3.2",
    "openai": "^3.3.0",
    "parse-diff": "^0.11.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.7",
    "@vercel/ncc": "^0.36.1",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
  }
}
